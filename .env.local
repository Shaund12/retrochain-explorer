## REST API base (production defaults to SSL proxy; override locally if needed)
VITE_REST_API_URL=/api
# VITE_REST_API_URL=https://api.retrochain.ddns.net

## Dev-only (Vite) proxy upstream target
VITE_REST_PROXY_TARGET=http://localhost:1317

## Tendermint RPC HTTP base (Keplr + fallback HTTP client)
VITE_RPC_URL=/rpc
# VITE_RPC_URL=https://rpc.retrochain.ddns.net

## Dev-only (Vite) proxy upstream target
VITE_RPC_PROXY_TARGET=http://localhost:26657

## Tendermint RPC WebSocket base (used for tx signing + subscriptions)
VITE_RPC_WS_URL=ws://localhost:26657/websocket
# VITE_RPC_WS_URL=wss://retrochain.ddns.net/websocket

# Optional dedicated endpoints per network for toggle
VITE_REST_API_URL_TESTNET=/api
VITE_REST_API_URL_MAINNET=/api
VITE_RPC_URL_TESTNET=/rpc
VITE_RPC_URL_MAINNET=/rpc
VITE_RPC_WS_URL_TESTNET=ws://localhost:26657/websocket
VITE_RPC_WS_URL_MAINNET=ws://localhost:26657/websocket

# Launcher (pump.fun-style) UI gate
VITE_ENABLE_LAUNCHER=true

# Slots dashboard UI gate
VITE_ENABLE_SLOTS=true

## Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=🛠️ Chain Upgrade in Progress
VITE_MAINTENANCE_DETAILS=Burn module + BTC staking going live. Explorer is read-only during the migration.
VITE_MAINTENANCE_ETA=Expected completion: 1 hour 45 minutes
VITE_MAINTENANCE_FEATURES=🔥 Burn module rollout,BTC staking launch,New staking UX
VITE_MAINTENANCE_BLOCK=52000
VITE_ENABLE_DEX=false

## Cosmos Hub IBC Channels
# Channel ID on RetroChain that points to Cosmos Hub
VITE_IBC_CHANNEL_RETRO_COSMOS=channel-0
# Channel ID on Cosmos Hub that points back to RetroChain (set to actual value before production)
VITE_IBC_CHANNEL_COSMOS_RETRO=channel-1638

## Osmosis IBC Channels
# Channel ID on RetroChain that points to Osmosis
VITE_IBC_CHANNEL_RETRO_OSMOSIS=channel-1
# Channel ID on Osmosis that points back to RetroChain
VITE_IBC_CHANNEL_OSMOSIS_RETRO=channel-108593

## Noble IBC Channels
# Channel ID on Noble that points to Osmosis
VITE_IBC_CHANNEL_NOBLE_OSMOSIS=channel-750
# Channel ID on Osmosis that points back to Noble
VITE_IBC_CHANNEL_OSMOSIS_NOBLE=

## Optional chain ids (Keplr)
VITE_OSMOSIS_CHAIN_ID=osmosis-1
VITE_NOBLE_CHAIN_ID=noble-1
# Override Cosmos Hub chain id if needed
VITE_COSMOS_CHAIN_ID=cosmoshub-4
VITE_COSMOS_RPC_URL=https://retrochain.ddns.net/cosmos-rpc/

